<h2>Your Pragmatic Cart</h2>

<table>
  <%= render(cart.line_items) %>

  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
  </tr>
</table>

<% if show_checkout_button %>
  <%= button_to "Checkout", new_order_path, { class: "button_margin_bottom", method: :get } %>
<% end %>

<%= button_to "Empty cart", cart, method: :delete, remote: true %>
